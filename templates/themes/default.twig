

<div id="header">
    <h1><span>{{ title }}</span></h1>

    {% if intro %}
    <p>{{ intro|raw }}</p>
    {% endif %}
</div>

<div id="chart"></div>

<div id="footer">
    <div class="footer-left">
    {% trans "Created with" %}
    <a href="{{ DW_DOMAIN }}">Datawrapper</a>
    </div>
    <div class="footer-right">
        {% if source %}
        {% trans "Source: " %}
        {% if sourceURL %}<a href="{{ sourceURL }}">{% endif %}{{ source }}{% if sourceURL %}</a>{% endif %}
        |
        {% endif %}
        <a href="{{ DW_DOMAIN }}/chart/{{ chart.id }}/data">{% trans "Download data" %}</a>
    </div>
    <br class="clearfix" />
</div>