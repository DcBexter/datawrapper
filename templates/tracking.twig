{% block piwik %}

    {% if PIWIK_URL %}


<!-- Piwik --> <script type="text/javascript">
var _paq = _paq || [];
(function(){ var u=(("https:" == document.location.protocol) ? "https://{{ PIWIK_URL }}/" : "http://{{ PIWIK_URL }}/");
_paq.push(['setSiteId', {{ PIWIK_IDSITE }}]);
