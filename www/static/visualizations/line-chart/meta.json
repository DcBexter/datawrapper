{
    "title": {
        "en": "Line Chart",
        "de": "Liniendiagramm",
        "fr": "Diagramme temporel"
    },
    "version": "0.8",
    "author": {
        "name": "gka",
        "email": "gka@vis4.net"
    },
    "extends": "raphael-chart",
    "dimensions": 2,
    "license": {
        "name": "MIT",
        "url": "http://www.opensource.org/licenses/mit-license.php"
    },
    "about": "http://vis4.net/blog/posts/doing-the-line-charts-right/",
    "options": {
        "direct-labeling": {
            "type": "checkbox",
            "label": {
                "en": "Direct labeling",
                "de": "Linien direkt beschriften",
                "fr": "direct labeling"
            },
            "default": true
        },
        "rotate-x-labels": {
            "type": "checkbox",
            "label": {
                "en": "Rotate labels 45°",
                "de": "Beschriftungen um 45° drehen",
                "fr": "rotate labels 45°"
            },
            "default": true
        },
        "baseline-zero": {
            "type": "checkbox",
            "label": {
                "en": "Force a baseline at zero",
                "de": "Erweitere die Achse bis zur Null",
                "fr": "Échelle en zero"
            }
        },

        "smooth-lines": {
            "type": "checkbox",
            "label": {
                "en": "Smooth lines",
                "de": "Linien glätten",
                "fr": "Smooth lines"
            },
            "default": false
        },
        "connect-missing-values": {
            "type": "checkbox",
            "label": {
                "en": "Connect lines between missing values",
                "de": "Linien zwischen fehlenden Werten verbinden",
                "fr": "translate me"
            }
        },
        "force-banking": {
            "type": "checkbox",
            "hidden": true,
            "label": {
                "en": "Bank the lines to 45°",
                "de": "Anstiege auf 45° ausrichten",
                "fr": "translate me"
            }
        }
    }
}